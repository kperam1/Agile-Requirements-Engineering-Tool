<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ideaboard.frontend.EstimateController">
    <top>
        <ToolBar>
            <Label text="UC-07: Estimate Story"/>
        </ToolBar>
    </top>
    <center>
        <VBox spacing="8" style="-fx-padding:16;">
            <TextField fx:id="storyIdField" promptText="Story ID"/>
            <TextField fx:id="pointsField" promptText="Points"/>
            <TextField fx:id="estimatedByField" promptText="Estimated By"/>
            <HBox spacing="8">
                <Button text="Add Estimate" onMouseClicked="#onAddEstimate"/>
                <Button text="Refresh" onMouseClicked="#onRefresh"/>
            </HBox>
            <Label fx:id="statusLabel"/>
            <SplitPane dividerPositions="0.5">
                <TextArea fx:id="latestArea"/>
                <ListView fx:id="historyList"/>
            </SplitPane>
        </VBox>
    </center>
</BorderPane>

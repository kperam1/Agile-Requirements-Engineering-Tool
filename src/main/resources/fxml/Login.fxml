<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.agile.requirements.controller.LoginControllerApi"
      spacing="12" alignment="CENTER"
      stylesheets="/css/auth.css">

    <children>
        <Label text="Agile RE Tool" styleClass="app-title" />
        <Label text="Login" styleClass="form-title" />

        <VBox spacing="8" alignment="CENTER_LEFT" prefWidth="280">
            <children>
                <Label text="Username" />
                <TextField fx:id="usernameField" promptText="Enter username" />
                <Label text="Password" />
                <PasswordField fx:id="passwordField" promptText="Enter password" />
                <HBox spacing="6" alignment="CENTER_LEFT">
                    <children>
                        <CheckBox fx:id="rememberMeCheckBox" text="Remember me" />
                        <Hyperlink fx:id="signupLink" text="Create account" onAction="#handleSignupLink" />
                    </children>
                </HBox>
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                        styleClass="primary-button" maxWidth="Infinity" />
                <Label fx:id="messageLabel" text="" styleClass="message-label" wrapText="true" />
            </children>
            <padding><Insets top="10" left="10" right="10" bottom="10"/></padding>
        </VBox>
    </children>

    <padding><Insets top="30" left="30" right="30" bottom="30"/></padding>
</VBox>

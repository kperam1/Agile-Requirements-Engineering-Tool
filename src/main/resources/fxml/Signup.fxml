<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="700.0" prefWidth="500.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agile.requirements.controller.SignupControllerApi">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="40.0">
            <children>
                <!-- Header -->
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="Create Account">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Label>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Join the Agile Requirements Engineering Tool" />
                    </children>
                </VBox>

                <!-- Message Label -->
                <Label fx:id="messageLabel" style="-fx-font-size: 13px; -fx-font-weight: bold;" wrapText="true" />

                <!-- Form Container -->
                <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                    <children>
                        <!-- Name Fields Row -->
                        <HBox spacing="15.0">
                            <children>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="First Name *" />
                                        <TextField fx:id="firstNameField" promptText="Enter first name" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </padding>
                                        </TextField>
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Last Name *" />
                                        <TextField fx:id="lastNameField" promptText="Enter last name" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </padding>
                                        </TextField>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Email Field -->
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Email Address *" />
                                <TextField fx:id="emailField" promptText="Enter email address" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </TextField>
                            </children>
                        </VBox>

                        <!-- Username Field -->
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Username *" />
                                <TextField fx:id="usernameField" promptText="Choose a username" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </TextField>
                            </children>
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Password *" />
                                <PasswordField fx:id="passwordField" promptText="Enter password (min 6 characters)" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </PasswordField>
                            </children>
                        </VBox>

                        <!-- Confirm Password Field -->
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Confirm Password *" />
                                <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </PasswordField>
                            </children>
                        </VBox>

                        <!-- Role ComboBox -->
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Role *" />
                                <ComboBox fx:id="roleComboBox" maxWidth="1.7976931348623157E308" promptText="Select your role" style="-fx-font-size: 14px; -fx-background-radius: 5;">
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </padding>
                                </ComboBox>
                            </children>
                        </VBox>

                        <!-- Signup Button -->
                        <Button fx:id="signupButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSignup" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Sign Up">
                            <padding>
                                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                            </padding>
                        </Button>
                    </children>
                </VBox>

                <!-- Social Login -->
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button fx:id="googleSignupButton" mnemonicParsing="false" onAction="#handleGoogleSignup" styleClass="social-button">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                    <image>
                                        <javafx.scene.image.Image url="@/images/logos/google.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="githubSignupButton" mnemonicParsing="false" onAction="#handleGitHubSignup" styleClass="social-button">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                    <image>
                                        <javafx.scene.image.Image url="@/images/logos/github.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="microsoftSignupButton" mnemonicParsing="false" onAction="#handleMicrosoftSignup" styleClass="social-button">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                    <image>
                                        <javafx.scene.image.Image url="@/images/logos/microsoft.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="yahooSignupButton" mnemonicParsing="false" onAction="#handleYahooSignup" styleClass="social-button">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                    <image>
                                        <javafx.scene.image.Image url="@/images/logos/yahoo.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>

                <!-- Login Link -->
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Already have an account?" />
                        <Hyperlink fx:id="loginLink" onAction="#handleLoginLink" style="-fx-font-size: 14px; -fx-text-fill: #1976d2; -fx-font-weight: bold;" text="Login here" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>

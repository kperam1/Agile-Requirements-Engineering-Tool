<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ideaboard.controllers.ReviewIdeasController"
            stylesheets="@../styles/app.css"
            prefWidth="1400" prefHeight="900"
            styleClass="review-container">
    <left>
        <VBox styleClass="left-rail" prefWidth="360" minWidth="340" maxWidth="380">
            <VBox spacing="4">
                <VBox.margin>
                    <Insets bottom="8"/>
                </VBox.margin>
                <Label text="Ideation Board" styleClass="board-title"/>
                <HBox spacing="6" alignment="CENTER_LEFT">
                    <Label fx:id="totalIdeasLabel" text="16 Ideas" styleClass="count-label"/>
                    <Label text="â€¢" styleClass="separator-dot"/>
                    <Label fx:id="activeIdeasLabel" text="7 Active" styleClass="count-active"/>
                </HBox>
            </VBox>
            <TextField fx:id="searchField" promptText="Search ideas..." styleClass="search"/>
            <ListView fx:id="ideasListView" styleClass="idea-list" VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>
    <center>
        <StackPane styleClass="details-container">
            <padding>
                <Insets top="30" right="30" bottom="30" left="20"/>
            </padding>
            <VBox fx:id="emptyState" alignment="CENTER" spacing="15" styleClass="empty-state">
                <Text text="Select an idea to review" styleClass="empty-state-text"/>
                <Text text="Choose an idea from the list to view details and approve or reject" 
                      styleClass="empty-state-subtext" wrappingWidth="350" textAlignment="CENTER"/>
            </VBox>
            <VBox fx:id="detailsCard" styleClass="modal-surface" spacing="0" alignment="TOP_LEFT" visible="false">
                <padding>
                    <Insets top="35" right="35" bottom="30" left="35"/>
                </padding>
                <HBox alignment="TOP_LEFT" spacing="20">
                    <VBox.margin>
                        <Insets bottom="30"/>
                    </VBox.margin>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Text fx:id="ideaTitleText" text="Mobile App Redesign" styleClass="detail-title"/>
                        <Label fx:id="ideaCategoryLabel" text="Product Enhancement" styleClass="detail-category"/>
                    </VBox>
                    <Label fx:id="ideaStatusBadge" text="Approved" styleClass="status-badge, badge-approved"/>
                </HBox>
                <HBox spacing="40" styleClass="metadata-row">
                    <VBox.margin>
                        <Insets bottom="25"/>
                    </VBox.margin>
                    <VBox spacing="6">
                        <Label text="Primary Actor" styleClass="metadata-label"/>
                        <Label fx:id="primaryActorLabel" text="Sarah Chen" styleClass="metadata-value"/>
                    </VBox>
                    <VBox spacing="6">
                        <Label text="Created" styleClass="metadata-label"/>
                        <Label fx:id="createdAtLabel" text="Nov 1, 2025" styleClass="metadata-value"/>
                    </VBox>
                    <VBox spacing="6">
                        <Label text="Updated" styleClass="metadata-label"/>
                        <Label fx:id="updatedAtLabel" text="Nov 7, 2025" styleClass="metadata-value"/>
                    </VBox>
                </HBox>
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="30"/>
                    </VBox.margin>
                    <Label text="Description" styleClass="section-label"/>
                    <ScrollPane fitToWidth="true" styleClass="description-scroll" VBox.vgrow="ALWAYS">
                        <TextArea fx:id="descriptionArea" wrapText="true" editable="false" 
                                 styleClass="description-text" prefRowCount="8"/>
                    </ScrollPane>
                </VBox>
                <HBox spacing="12" alignment="CENTER_RIGHT" styleClass="action-buttons">
                    <Button fx:id="rejectButton" text="Reject" styleClass="btn-reject" 
                           onAction="#handleReject" prefWidth="100"/>
                    <Button fx:id="approveButton" text="Approve" styleClass="btn-approve" 
                           onAction="#handleApprove" prefWidth="110"/>
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.agile_re_tool.ui.WorkspaceController">

    <VBox prefWidth="220" spacing="12" styleClass="sidebar" padding="18">
        <Label text="Agile RE Tool" styleClass="sidebar-title"/>
        <Button fx:id="dashBtn" text="Dashboard" styleClass="nav-btn"/>
        <Button fx:id="ideaBtn" text="Ideation Board" styleClass="nav-btn"/>
        <Button fx:id="backlogBtn" text="Backlog" styleClass="nav-btn"/>
        <Button fx:id="sprintBtn" text="Sprint Board" styleClass="nav-btn"/>
        <Button fx:id="reportsBtn" text="Reports" styleClass="nav-btn"/>
        <Button fx:id="teamBtn" text="Team Settings" styleClass="nav-btn"/>
    </VBox>

    <StackPane fx:id="contentArea" styleClass="content">
        <Label text="Welcome to Agile RE Tool Workspace!" styleClass="welcome-label"/>
    </StackPane>
</BorderPane>

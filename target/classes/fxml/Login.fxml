<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="500.0" prefWidth="450.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agile.requirements.controller.LoginControllerApi">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="40.0">
            <children>
                <!-- Header -->
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="Welcome Back">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Label>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Sign in to continue" />
                    </children>
                </VBox>

                <!-- Message Label -->
                <Label fx:id="messageLabel" style="-fx-font-size: 13px; -fx-font-weight: bold;" wrapText="true" />

                <!-- Form Container -->
                <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                    <children>
                        <!-- Username Field -->
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Username" />
                                <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </TextField>
                            </children>
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Password" />
                                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </PasswordField>
                            </children>
                        </VBox>

                        <!-- Login Button -->
                        <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Login">
                            <padding>
                                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                            </padding>
                        </Button>
                    </children>
                </VBox>

                <!-- Social Login -->
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button fx:id="googleLoginButton" mnemonicParsing="false" onAction="#handleGoogleLogin" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1px; -fx-border-radius: 50%; -fx-background-radius: 50%; -fx-cursor: hand; -fx-min-width: 50px; -fx-min-height: 50px; -fx-max-width: 50px; -fx-max-height: 50px; -fx-padding: 0;">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                    <image>
                                        <javafx.scene.image.Image url="@../images/logos/google.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="githubLoginButton" mnemonicParsing="false" onAction="#handleGitHubLogin" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1px; -fx-border-radius: 50%; -fx-background-radius: 50%; -fx-cursor: hand; -fx-min-width: 50px; -fx-min-height: 50px; -fx-max-width: 50px; -fx-max-height: 50px; -fx-padding: 0;">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                    <image>
                                        <javafx.scene.image.Image url="@../images/logos/github.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="microsoftLoginButton" mnemonicParsing="false" onAction="#handleMicrosoftLogin" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1px; -fx-border-radius: 50%; -fx-background-radius: 50%; -fx-cursor: hand; -fx-min-width: 50px; -fx-min-height: 50px; -fx-max-width: 50px; -fx-max-height: 50px; -fx-padding: 0;">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                    <image>
                                        <javafx.scene.image.Image url="@../images/logos/microsoft.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="yahooLoginButton" mnemonicParsing="false" onAction="#handleYahooLogin" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1px; -fx-border-radius: 50%; -fx-background-radius: 50%; -fx-cursor: hand; -fx-min-width: 50px; -fx-min-height: 50px; -fx-max-width: 50px; -fx-max-height: 50px; -fx-padding: 0;">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                                    <image>
                                        <javafx.scene.image.Image url="@../images/logos/yahoo.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>

                <!-- Signup Link -->
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Don't have an account?" />
                        <Hyperlink fx:id="signupLink" onAction="#handleSignupLink" style="-fx-font-size: 14px; -fx-text-fill: #1976d2; -fx-font-weight: bold;" text="Sign up here" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>

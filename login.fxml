<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="450.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agile.requirements.controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="25.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="60.0">
            <children>
                <!-- Header -->
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="Welcome Back">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>
                        <Label style="-fx-font-size: 15px; -fx-text-fill: #666666;" text="Sign in to your account" />
                    </children>
                </VBox>

                <!-- Message Label -->
                <Label fx:id="messageLabel" style="-fx-font-size: 13px; -fx-font-weight: bold;" wrapText="true" />

                <!-- Form Container -->
                <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                    <padding>
                        <Insets bottom="35.0" left="35.0" right="35.0" top="35.0" />
                    </padding>
                    <children>
                        <!-- Username Field -->
                        <VBox spacing="8.0">
                            <children>
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #333333; -fx-font-weight: bold;" text="Username" />
                                <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                    <padding>
                                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                                    </padding>
                                </TextField>
                            </children>
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="8.0">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333333; -fx-font-weight: bold;" text="Password" HBox.hgrow="ALWAYS" />
                                        <Hyperlink style="-fx-font-size: 12px; -fx-text-fill: #1976d2;" text="Forgot?" />
                                    </children>
                                </HBox>
                                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                    <padding>
                                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                                    </padding>
                                </PasswordField>
                            </children>
                        </VBox>

                        <!-- Remember Me -->
                        <CheckBox fx:id="rememberMeCheckBox" style="-fx-font-size: 13px; -fx-text-fill: #666666;" text="Remember me" />

                        <!-- Login Button -->
                        <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Login">
                            <padding>
                                <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
                            </padding>
                        </Button>
                    </children>
                </VBox>

                <!-- Signup Link -->
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Don't have an account?" />
                        <Hyperlink fx:id="signupLink" onAction="#handleSignupLink" style="-fx-font-size: 14px; -fx-text-fill: #1976d2; -fx-font-weight: bold;" text="Sign up now" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
